<Page x:Class="project_navigator.Views.Pages.MainContent.MainContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:project_navigator.Views.Pages.MainContent"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="MainContentPage"
      d:DataContext="{d:DesignInstance local:MainContentPage,
                                     IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignHeight="600"
      d:DesignWidth="1200">
    <Grid>
        <ui:NavigationView Name="NavigationView"
                           Padding="32"
                           FooterMenuItemsSource="{Binding ViewModel.FooterMenuItems, Mode=OneWay}"
                           MenuItemsSource="{Binding ViewModel.MenuItems, Mode=OneWay}"
                           Transition="FadeInWithSlide"
                           IsPaneOpen="False" />

    </Grid>
</Page>